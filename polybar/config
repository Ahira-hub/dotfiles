[network]
type = internal/network
interface = wlp2s0
;udspeed-minwidth = 3
format-connected-underline = ${colors.underline}
format-disconnected-underline = ${colors.primary}


[module/networkdown]
type = ${network.type}
interface = ${network.interface}
;udspeed-minwidth = ${network.udspeed-minwidth}
label-connected = %{A1:networkmanager_dmenu:}ÔÅ£%downspeed:8:8%%{A}
label-disconnected =
format-connected-underline = ${network.format-connected-underline}
format-disconnected-underline = ${network.format-disconnected-underline}


[module/networkup]
type = ${network.type}
interface = ${network.interface}
;udspeed-minwidth = ${network.udspeed-minwidth}
label-connected = %{A1:networkmanager_dmenu:}ÔÅ¢%upspeed:8:8%%{A}
label-disconnected = %{A1:networkmanager_dmenu:}Ôá´ not connected%{A}
format-connected-underline = ${network.format-connected-underline}
format-disconnected-underline = ${network.format-disconnected-underline}


